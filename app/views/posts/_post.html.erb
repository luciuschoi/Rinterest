<div class='post grid-item'>
  <div class="post-title">
    <%= post.title %>
  </div>
  <div class="post-content">
    <%= post.content %>
  </div>
  <div class='post-actions'>
    <%= link_to 'Show', post %> ·
    <%= link_to 'Edit', edit_post_path(post) %> ·
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
